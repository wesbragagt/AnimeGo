<script src="/js/index.js">
    const queryURL = "https://kitsu.io/api/edge/anime?page[limit]=1?filter[text]=naruto";
    function grabAnime(title, grid) {
        $.ajax({
            url: queryURL + title,
            method: "GET"
        }).then(function (response) {

            let anime;
            for (let i = 0; i < response.data.length; i++) {
                anime = response.data[i].attributes;
                console.log(anime[i].posterImage.original);
            }


            $("#grid_" + grid)
                .attr({ src: anime.posterImage.original })
                .val(response.data[0].id);
            // $("#grid_1_text").text(anime.synopsis);
        });
    }
    $('document').ready(function () {
        grabAnime("naruto", "0");
    });

</script>