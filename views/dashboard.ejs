<!-- MODAL POPUP -->
<div
    class="modal fade"
    id="mymodal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalScrollableTitle"
    aria-hidden="true"
>
    <div
        class="modal-dialog modal-lg modal-dialog-scrollable"
        role="document"
    >
        <div class="modal-content">
            <div class="modal-header">
                <h5
                    class="modal-title"
                    id="exampleModalScrollableTitle"
                >
                    Modal title
                </h5>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <!-- MODAL BODY -->
            <div
                class="modal-body container d-flex flex-column align-items-start p-2"
            >
                <div
                    class="col-md-12 embed-responsive embed-responsive-16by9 mb-2"
                >
                    <iframe
                        class="embed-responsive-item modal-preview"
                        src=""
                        frameborder="0"
                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                    ></iframe>
                </div>
                <div class="row d-flex justify-content-start flex-wrap">
                    <div
                        class="col-md-3 pr-0 d-flex flex-column align-items-start"
                    >
                        <img
                            class="rounded modal-image img-fluid pb-0"
                            src=""
                            alt=""
                            style="height: 300px;"
                        />
                        <div class="text-left">
                            <span
                                >Released:
                                <p id="released"></p
                            ></span>
                            <span
                                >Episodes:
                                <p id="episodes"></p
                            ></span>
                        </div>
                    </div>

                    <div class="col-md-8 d-inline-block">
                        <p class="modal-synopsis  text-dark"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                >
                    Close
                </button>
                <button
                    id="add-btn"
                    type="button"
                    class="btn btn-primary"
                    data-anime=""
                >
                    Add to List
                </button>
            </div>
        </div>
    </div>
</div>
